<% include partials/header %>

<div class="ui main text container raised segment">
	<div class="ui huge header center aligned"><%= blog.title %></div>
	<div class="ui top attached ">
		<div class="item">
			<img class="ui centered rounded image" src="<%= blog.image %>">
			<div class="content">
				<span><%= blog.created.toDateString() %></span>
			</div>
			<div class="description">
				<p><%- blog.body %></p>
			</div>
				<a class="ui green basic button" href="/blogs/<%= blog._id %>/edit" >Edit</a>
			 	<form id="delete" class="ui form" action="/blogs/<%= blog._id %>?_method=delete" method="POST">
					<button class="ui red basic button">Delete</button>
				</form>
		</div>
	</div>
	
</div>



<% include partials/footer %>